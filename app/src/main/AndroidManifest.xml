<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hujiang.normandy"
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="com.hujiang.normandy.DemoApplication"
        android:allowBackup="true"
        android:label="网络模块Demo"
        android:supportsRtl="true"
        tools:replace="android:label"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.hujiang.normandy.MainActivity"
            android:label="网络模块Demo"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LeagueActivity"/>

        <!--社团相关注册-->
        <!-- 圈子 -->
        <activity
            android:name="com.hujiang.league.app.search.CircleSearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/BaseLeagueTheme.NoTitle">
        </activity>
        <activity
            android:name="com.hujiang.league.app.topic.CircleCreateNewPostActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.hujiang.league.app.topic.MyAllCirclesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.hujiang.league.app.topic.TopicDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name="com.hujiang.league.app.topic.TopicDetailGradeCommentsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.hujiang.league.app.search.TopicReportActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name="com.hujiang.league.app.me.MyTopicsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.hujiang.league.app.me.CircleMsgActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="com.hujiang.league.view.input.SelectImagesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.hujiang.league.view.input.view.zoom.ZoomImageActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hujiang.league.app.topic.CircleHomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hujiang.league.app.topic.MoreCircleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hujiang.league.app.topic.CircleIntroductionActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hujiang.league.app.topic.ApplyJoiningCircleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <!--*****************************service here*****************************-->
        <service
            android:name="com.hujiang.hjaudioplayer.service.AudioPlayService"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="com.hujiang.hjaudioplayer.service.AudioPlayService"/>
            </intent-filter>
        </service>

        <receiver
            android:name="com.hujiang.hjaudioplayer.PlayNotificationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.hujiang.normandy.audio.play.click"/>
                <action android:name="com.hujiang.normandy.audio.play.close"/>
                <action android:name="com.hujiang.normandy.audio.play.delete"/>
            </intent-filter>
        </receiver>

        <!--分享相关-->
        <!--微博授权页面-->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:theme="@style/BaseLeagueTheme.NoTitle"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <!-- 默认分享模块界面 Activity -->
        <activity
            android:name="com.hujiang.share.FullScreenShareActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.NoTitle">
        </activity>

        <!--登录相关注册-->
        <activity
            android:name="com.hujiang.account.app.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >
        </activity>
        <activity
            android:name="com.hujiang.account.app.register.RegisterActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name="com.hujiang.account.app.MyAccountActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name">

        </activity>

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!--scheme值为你tencent+申请的qq app key-->
                <data android:scheme="tencent1104658511"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.hujiang.normandy.wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">

        </activity>

        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>


        <!-- 微信消息接收器 -->
        <receiver
            android:name="com.hujiang.social.sdk.wx.WeixinBroadcastReceiver"
            android:permission="com.tencent.mm.plugin.permission.SEND">
            <intent-filter>
                <action android:name="com.tencent.mm.plugin.openapi.Intent.ACTION_REFRESH_WXAPP"/>
            </intent-filter>
        </receiver>


